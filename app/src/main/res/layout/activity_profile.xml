<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimaryDark"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center"
                android:paddingStart="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_start_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_back"
                    android:tint="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingStart="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/normal"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:text="Profile"
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|center"
                android:paddingEnd="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/toolbar_end_image_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/ic_logout"
                    android:tint="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/shape_circle_outline">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:padding="6dp"
                android:src="@drawable/dummy_person" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal"
            android:gravity="center"
            android:text="Patricia"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:layout_marginTop="12dp"
            android:padding="5dp"
            android:textSize="22sp"
            android:textColor="@color/colorAppDark" />

        <TextView
            android:id="@+id/tv_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/normal"
            android:text="Edit Profile"
            android:includeFontPadding="false"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_drawable_top_corner"
        android:paddingTop="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/normal"
                android:textStyle="bold"
                android:text="Details"
                android:includeFontPadding="false"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:textSize="19sp"
                android:textColor="@color/colorBlack" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/lbl_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal"
                    android:text="Email"
                    android:includeFontPadding="false"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/colorBlack" />

                <EditText
                    android:id="@+id/et_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal"
                    android:text="patricia@onlinezeal.com"
                    android:background="@color/colorTransparent"
                    android:layout_alignParentEnd="true"
                    android:includeFontPadding="false"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="5dp"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textColor="@color/colorLightGrey" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal"
                    android:text="Contact"
                    android:includeFontPadding="false"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/colorBlack" />

                <EditText
                    android:id="@+id/et_profile_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal"
                    android:text="9843687828"
                    android:inputType="number"
                    android:layout_alignParentEnd="true"
                    android:includeFontPadding="false"
                    android:background="@color/colorTransparent"
                    android:enabled="false"
                    android:padding="5dp"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textColor="@color/colorLightGrey" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorBackground" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal"
                    android:text="Department"
                    android:includeFontPadding="false"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/colorBlack" />

                <EditText
                    android:id="@+id/et_profile_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/normal"
                    android:text="Frontend Development"
                    android:layout_alignParentEnd="true"
                    android:includeFontPadding="false"
                    android:background="@color/colorTransparent"
                    android:inputType="text"
                    android:enabled="false"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:textColor="@color/colorLightGrey" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/save_changes_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_save_changes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save changes"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/shape_button_fill"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/normal"
                    android:includeFontPadding="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>